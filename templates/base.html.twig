<script lang="javascript">
    const f = document.querySelector("form[name=f]");
    f.onsubmit=function(ev){

        const name = f.name.value,
            email = f.email.value,
            phone = f.phone.value;
        pp= f.people.value;
        var letters = /^[A-Za-z- ]+$/;

        if( ! name.match(letters)){
            alert("Verify your name");
            return false;
        }

        if (isNaN(phone) ) {
            alert("verify your phone number");
            return false;
        }

        if (phone.length != 8){
            alert("verify your phone number");
            return false;
        }
        if(pp > 10){
            alert("Sorry we can only accept 10 people at maximum");
            return false;
        }


    }
</script>
